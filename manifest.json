{
  "manifest_version": 2,
  "name": "Emotional Check",
  "description": "This extension checks up on how you're feeling and gives you the appropriate resources",
  "version": "1.0",

  "app": {
    "background": {
      "scripts": ["startup.js"]
    }
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "videoCapture"
  ],
  "background": {
          "scripts": ["jquery.js", "clarifai.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true,
    "open_in_tab": true
  }
}
